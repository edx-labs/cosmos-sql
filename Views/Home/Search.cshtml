@model SearchViewModel
<div class="alert alert-dark d-flex justify-content-between py-3" role="alert">
    <a href="@Url.RouteUrl("Home")" class="display-4 text-dark">
        <i class="fa fa-list" aria-hidden="true"></i>
    </a>
    <h4 class="display-4">
        Realtor Spotlight: @Model.Realtor
    </h4>
    <span>&nbsp;</span>
</div>
<main class="container">
    <div class="m-5">
        <div id="carousel" class="carousel slide bg-dark pb-5" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int index = 0; index < Model.Homes.Count; index++)
                {
                    <li data-target="#carousel" data-slide-to="index" class="@(index == 0 ? "active" : String.Empty)"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int index = 0; index < Model.Homes.Count; index++)
                {
                    Home home = Model.Homes[index];
                    <div class="carousel-item @(index == 0 ? "active" : String.Empty)">
                        <img class="d-block img-fluid w-50 mx-auto" src="@home.Thumbnail" alt="@home.Address">
                        <div class="text-center mt-2 text-light d-none d-md-block">
                            <a href="@Url.RouteUrl("GetHome", new { id = home.Id })" class="h5">@home.Address</a>
                            <p><small>@home.Description</small></p>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</main>