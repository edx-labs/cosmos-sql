@model CosmosSettings
<main class="container">
    <div class="m-5">
        <h3 class="display-3 text-center">
            Setup Your Cosmos DB Database Connection
        </h3>
        <div class="card">
            <div class="card-body">
                <form asp-route="PostSetup" method="post">
                    <div class="form-group row">
                        <label for="inputEndpointUrl" class="col-sm-2 col-form-label font-weight-bold">Endpoint Url</label>
                        <div class="col-sm-10">
                            <input type="url" class="form-control" id="inputEndpointUrl" aria-describedby="helpEndpointUrl" asp-for="EndpointUrl">
                            <small id="helpEndpointUrl" class="form-text text-muted">The <code>URI</code> listed within the <strong>Keys</strong> pane located in the Azure Portal</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputAuthorizationKey" class="col-sm-2 col-form-label font-weight-bold">Authorization Key</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAuthorizationKey" aria-describedby="helpAuthorizationKey" asp-for="AuthorizationKey">
                            <small id="helpAuthorizationKey" class="form-text text-muted">The <code>PRIMARY KEY</code> listed within the <strong>Keys</strong> pane located in the Azure Portal</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputDatabaseId" class="col-sm-2 col-form-label font-weight-bold">Database Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control-plaintext" id="inputDatabaseId" asp-for="DatabaseId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputContainerId" class="col-sm-2 col-form-label font-weight-bold">Container Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control-plaintext" id="inputContainerId" asp-for="ContainerId">
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="font-weight-light font-italic text-danger"></div>
                    <hr />                    
                    <button class="btn btn-primary" type="submit">Submit form</button>
                </form>
            </div>
        </div>
    </div>  
</main> 